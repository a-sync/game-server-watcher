{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "node8-gamedig": ["node_modules/@types/gamedig"]
        },
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule" : true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}